<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /blood_konnector/

    # Remove .php extension
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}.php -f
    RewriteRule ^([^/]+)/?$ $1.php [L]

    # Redirect /index.php to /
    RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /blood_konnector/index\.php\ HTTP/
    RewriteRule ^index\.php$ /blood_konnector/ [R=301,L]
</IfModule>

